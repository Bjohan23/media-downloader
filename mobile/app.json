{
  "expo": {
    "name": "Media Downloader",
    "slug": "media-downloader",
    "version": "1.0.0",
    "orientation": "portrait",
    "userInterfaceStyle": "automatic",
    "splash": {
      "backgroundColor": "#0EA5E9"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.mediadownloader.app",
      "infoPlist": {
        "NSPhotoLibraryAddUsageDescription": "La app necesita acceso para guardar videos y música en tu galería",
        "NSPhotoLibraryUsageDescription": "La app necesita acceso a tu galería para guardar los archivos descargados"
      }
    },
    "android": {
      "package": "com.mediadownloader.app",
      "adaptiveIcon": {
        "backgroundColor": "#0EA5E9"
      },
      "permissions": [
        "INTERNET",
        "ACCESS_MEDIA_LOCATION",
        "READ_MEDIA_IMAGES",
        "READ_MEDIA_VIDEO",
        "READ_MEDIA_AUDIO"
      ]
    },
    "web": {
      "favicon": "#0EA5E9"
    },
    "plugins": [
      "expo-secure-store",
      "expo-media-library"
    ]
  }
}
