{
  "name": "media-downloader-desktop",
  "version": "1.0.0",
  "description": "Media Downloader - Desktop Application",
  "main": "dist/main.js",
  "author": "",
  "license": "MIT",
  "private": true,
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\" \"wait-on http://localhost:3000 && npm run dev:electron\"",
    "dev:backend": "cd ../backend && npm run start:dev",
    "dev:frontend": "cd ../frontend && npm run dev",
    "dev:electron": "electron .",
    "build:frontend": "cd ../frontend && npm run build",
    "build:backend": "cd ../backend && npm run build",
    "build:electron": "tsc -p tsconfig.json",
    "clean": "node scripts/clean-build.js",
    "prebuild": "npm run clean",
    "build": "npm run build:frontend && npm run build:backend && npm run build:electron",
    "pack": "npm run build && electron-builder --dir",
    "dist": "npm run build && electron-builder",
    "dist:windows": "npm run build && electron-builder --win",
    "dist:mac": "npm run build && electron-builder --mac",
    "dist:linux": "npm run build && electron-builder --linux",
    "postinstall": "electron-builder install-app-deps"
  },
  "dependencies": {
    "electron-store": "^8.2.0",
    "portfinder": "^1.0.32",
    "tree-kill": "^1.2.2",
    "yargs": "^18.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "concurrently": "^8.2.2",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "rimraf": "^6.1.2",
    "typescript": "^5.3.3",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.mediadownloader.app",
    "productName": "Media Downloader",
    "directories": {
      "output": "release",
      "buildResources": "resources"
    },
    "compression": "maximum",
    "asarUnpack": [
      "**/binaries/**/*",
      "**/prisma/**/*"
    ],
    "files": [
      "dist/**/*",
      "../backend/dist/**/*",
      "../backend/node_modules/**/*",
      "../backend/prisma/**/*",
      "../backend/downloads/**/*",
      "../frontend/.next/**/*",
      "../frontend/node_modules/**/*",
      "../frontend/public/**/*",
      "binaries/**/*"
    ],
    "extraResources": [
      {
        "from": "../backend/dist",
        "to": "backend/dist"
      },
      {
        "from": "../backend/node_modules",
        "to": "backend/node_modules"
      },
      {
        "from": "../backend/prisma",
        "to": "backend/prisma"
      },
      {
        "from": "../frontend/.next",
        "to": "frontend/.next"
      },
      {
        "from": "binaries",
        "to": "binaries"
      }
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    },
    "mac": {
      "target": [
        "dmg",
        "zip"
      ],
      "category": "public.app-category.video"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Video"
    }
  }
}
